<div class="center hero-unit">
<h1>Listing stores</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr >
        <td><%= store.id %></td>
        <td><%= store.name %></td>
        <td><%= store.latitude %></td>
        <td><%= store.longitude %></td>
        <td><%= link_to 'Add drug', new_store_drug_path(store.id) %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td ><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Store', new_store_path, :class=> "btn btn-primary" %>
</div>

