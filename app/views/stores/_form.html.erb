<%= form_for @store, :html => { :class=> "form-horizontal center"}  do |f|%>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>
      <ul>a
                <% @store.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter store name" %>
    </div>
  </div>
  <div class="form-group ">
    <%= f.label :latitude, class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :latitude, class: "form-control", placeholder: "Enter store latitude" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :longitude, class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :longitude, class: "form-control", placeholder: "Enter store longitude" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>