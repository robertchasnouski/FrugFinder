<%= form_for [@store, @store.drugs.build], :html => { :class=> "form-horizontal center"} do |f| %>
    <% if @drug.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% @drug.errors.full_messages.each do |msg| %>
                    <li>
                        <p class="text-danger text-left">
                            <%= msg %>
                        </p>
                    </li>
                    <% end %>
            </ul>
        </div>
        <% end %>
            <div class="form-group ">
                <%= f.label :drug_name, class: "col-sm-8 control-label" %>
                    <div class="col-sm-8 ">
                        <%= f.text_field :drug_name, class: "form-control ", placeholder: "Enter drug name" %>
                    </div>
            </div>
            <div class="form-group">
                <%= f.label :price, class: "col-sm-8 control-label" %>
                    <div class="col-sm-8">
                        <%= f.text_field :price, class: "form-control", placeholder: "Enter drug price" %>
                    </div>
            </div>
            <div class="actions">
                <%= f.submit %>
            </div>
            <% end %>
